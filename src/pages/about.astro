---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { profile, experience, achievements, skills } from '../data/portfolio';
---

<Layout title="About - Paranjay Patel">
  <Header currentPage="about" />

  <main>
    {/* Hero Section */}
    <section class="min-h-60 flex items-center justify-center pt-32 px-8 pb-16 ml-6">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-4">
          <span class="bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">
            About Me
          </span>
        </h1>
      </div>
    </section>

    {/* About Section */}
    <section class="py-20 px-8 ml-6">
      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
          {/* Image */}
          <div class="flex justify-center">
            <div class="relative group">
              <div class="absolute inset-0 bg-gradient-to-r from-blue-500 to-purple-600 rounded-xl blur-2xl opacity-50 group-hover:opacity-75 transition-opacity"></div>
              <img
                src={profile.avatar}
                alt={profile.name}
                class="relative w-72 h-72 rounded-xl border-2 border-blue-500/50 object-cover"
              />
            </div>
          </div>

          {/* Bio */}
          <div>
            <h2 class="text-3xl font-bold mb-4">{profile.name}</h2>
            <p class="text-blue-400 text-lg font-semibold mb-4">{profile.title}</p>
            <p class="text-slate-300 mb-6 leading-relaxed">
              {profile.bio}
            </p>
            <p class="text-slate-400 mb-6 leading-relaxed">
              I'm a passionate CS student with a keen interest in cloud technologies and DevOps. My journey has taken me through various domains including mobile app development with Flutter, frontend development with React and Astro, and backend technologies with Node.js and Python.
            </p>
            <p class="text-slate-400 mb-6 leading-relaxed">
              When I'm not coding, I love exploring new Linux distributions, experimenting with infrastructure tools, and staying updated with the latest developments in cloud computing.
            </p>
          </div>
        </div>
      </div>
    </section>

    {/* Experience Section */}
    <section class="py-20 px-8 ml-6 bg-gradient-to-b from-slate-950/50 to-slate-950">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-4xl font-bold mb-12 text-center">
          <span class="bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">
            Experience
          </span>
        </h2>

        <div class="space-y-8">
          {experience.map(exp => (
            <div class="border-l-2 border-blue-500/50 pl-8 pb-8">
              <div class="flex items-start justify-between gap-4 mb-2">
                <h3 class="text-xl font-bold">{exp.role}</h3>
                <span class="text-sm text-blue-400">{exp.period}</span>
              </div>
              <p class="text-blue-300 font-semibold mb-2">{exp.company}</p>
              <p class="text-slate-400">{exp.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    {/* Achievements Section */}
    <section class="py-20 px-8 ml-6">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-4xl font-bold mb-12 text-center">
          <span class="bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">
            Achievements
          </span>
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {achievements.map(achievement => (
            <div class="rounded-xl border border-slate-700/50 bg-slate-800/30 p-6 hover:border-blue-500/50 transition-all flex items-center gap-4">
              <div class="w-3 h-3 rounded-full bg-blue-500 flex-shrink-0"></div>
              <p class="text-slate-300">{achievement}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    {/* Skills Detailed Section */}
    <section class="py-20 px-8 ml-6 bg-gradient-to-b from-slate-950/50 to-slate-950">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-4xl font-bold mb-12 text-center">
          <span class="bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">
            Skills & Expertise
          </span>
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {skills.map(skillGroup => (
            <div class="rounded-xl border border-slate-700/50 bg-slate-800/30 p-6 hover:border-blue-500/50 transition-all">
              <h3 class="font-bold text-blue-400 mb-4 text-lg">{skillGroup.category}</h3>
              <ul class="space-y-3">
                {skillGroup.items.map(skill => (
                  <li class="text-slate-300 flex items-center gap-2">
                    <svg class="w-5 h-5 text-blue-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                    {skill}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    {/* CTA Section */}
    <section class="py-20 px-8 ml-6">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-4xl font-bold mb-6">Interested in Collaborating?</h2>
        <p class="text-slate-400 text-lg mb-8">
          Let's build something amazing together. Feel free to reach out!
        </p>
        <a
          href="/contact"
          class="inline-block px-8 py-4 rounded-lg bg-gradient-to-r from-blue-500 to-purple-600 text-white font-semibold hover:shadow-lg hover:shadow-blue-500/50 transform hover:scale-105 transition-all"
        >
          Get in Touch
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
