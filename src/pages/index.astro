---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { profile, projects, skills } from '../data/portfolio';
---

<Layout title={`${profile.name} - Portfolio`}>
  <Header currentPage="home" />

  <main>
    {/* Hero Section */}
    <section class="min-h-screen flex items-center justify-center pt-20 px-8 ml-6">
      <div class="max-w-4xl mx-auto text-center">
        {/* Avatar */}
        <div class="mb-8 flex justify-center">
          <div class="relative group">
            <div class="absolute inset-0 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full blur-xl opacity-50 group-hover:opacity-75 transition-opacity"></div>
            <img
              src={profile.avatar}
              alt={profile.name}
              class="relative w-32 h-32 rounded-full border-2 border-blue-500/50 object-cover"
            />
          </div>
        </div>

        {/* Main Heading */}
        <h1 class="text-5xl md:text-7xl font-bold mb-4">
          <span class="bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400 bg-clip-text text-transparent">
            Hi, I'm Paranjay
          </span>
        </h1>

        {/* Subheading */}
        <p class="text-xl md:text-2xl text-slate-300 mb-4 font-medium">
          {profile.title}
        </p>

        {/* Bio */}
        <p class="text-slate-400 text-lg max-w-2xl mx-auto mb-8 leading-relaxed">
          {profile.bio}
        </p>

        {/* CTA Buttons */}
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/projects"
            class="px-8 py-4 rounded-lg bg-gradient-to-r from-blue-500 to-purple-600 text-white font-semibold hover:shadow-lg hover:shadow-blue-500/50 transform hover:scale-105 transition-all"
          >
            View My Work
          </a>
          <a
            href="/contact"
            class="px-8 py-4 rounded-lg border-2 border-blue-500/50 text-blue-300 font-semibold hover:bg-blue-500/10 transform hover:scale-105 transition-all"
          >
            Get in Touch
          </a>
        </div>

        {/* Scroll Indicator */}
        <div class="mt-16 flex justify-center animate-bounce">
          <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
        </div>
      </div>
    </section>

    {/* Featured Projects Preview */}
    <section class="py-20 px-8 ml-6 bg-gradient-to-b from-slate-950/50 to-slate-950">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold mb-4">
            <span class="bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">
              Featured Projects
            </span>
          </h2>
          <p class="text-slate-400 text-lg">A selection of my best work</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
          {projects.slice(0, 3).map(project => (
            <a
              href={project.github}
              target="_blank"
              rel="noopener noreferrer"
              class="group relative rounded-xl overflow-hidden border bg-slate-800/30 border-slate-700/50 hover:border-slate-600/50 p-6 transition-all duration-300 hover:shadow-xl"
            >
              <div class="absolute inset-0 bg-gradient-to-br from-blue-500/0 to-purple-500/0 group-hover:from-blue-500/10 group-hover:to-purple-500/10 transition-all duration-300"></div>
              <div class="relative">
                <h3 class="text-lg font-bold mb-2 group-hover:text-blue-400 transition-colors">
                  {project.title}
                </h3>
                <p class="text-slate-400 text-sm mb-4">{project.description}</p>
                <div class="flex flex-wrap gap-2">
                  {project.tech.slice(0, 3).map(t => (
                    <span class="px-3 py-1 rounded-full text-xs bg-slate-700/50 text-slate-300 border border-slate-600/50">
                      {t}
                    </span>
                  ))}
                </div>
              </div>
            </a>
          ))}
        </div>

        <div class="text-center">
          <a
            href="/projects"
            class="inline-block px-8 py-3 rounded-lg border-2 border-blue-500/50 text-blue-300 font-semibold hover:bg-blue-500/10 transition-all"
          >
            View All Projects â†’
          </a>
        </div>
      </div>
    </section>

    {/* Skills Section */}
    <section class="py-20 px-8 ml-6">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-4xl md:text-5xl font-bold mb-16 text-center">
          <span class="bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">
            Skills & Technologies
          </span>
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {skills.map(skillGroup => (
            <div class="rounded-xl border border-slate-700/50 bg-slate-800/30 p-6 hover:border-blue-500/50 transition-all">
              <h3 class="font-bold text-blue-400 mb-4">{skillGroup.category}</h3>
              <ul class="space-y-2">
                {skillGroup.items.map(skill => (
                  <li class="text-slate-300 text-sm flex items-center gap-2">
                    <span class="w-1.5 h-1.5 rounded-full bg-blue-500"></span>
                    {skill}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    {/* CTA Section */}
    <section class="py-20 px-8 ml-6">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-4xl md:text-5xl font-bold mb-6">
          Let's Build Something Amazing
        </h2>
        <p class="text-slate-400 text-lg mb-8">
          Whether you have a project in mind or just want to chat, I'd love to hear from you.
        </p>
        <a
          href="/contact"
          class="inline-block px-8 py-4 rounded-lg bg-gradient-to-r from-blue-500 to-purple-600 text-white font-semibold hover:shadow-lg hover:shadow-blue-500/50 transform hover:scale-105 transition-all"
        >
          Start a Conversation
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
