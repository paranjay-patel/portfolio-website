---
import { profile } from '../data/portfolio';

interface Props {
  currentPage?: string;
}

const { currentPage = 'home' } = Astro.props;

const navItems = [
  { label: 'Home', href: '/', id: 'home' },
  { label: 'About', href: '/about', id: 'about' },
  { label: 'Projects', href: '/projects', id: 'projects' },
  { label: 'Contact', href: '/contact', id: 'contact' },
];
---

<header class="fixed top-0 left-0 right-0 z-50 backdrop-blur-md bg-slate-950/80 border-b border-slate-800/50 h-20 flex items-center">
  <nav class="w-full px-12 sm:px-8 flex items-center justify-between">
    {/* Logo */}
    <a href="/" class="flex items-center gap-2 group">
      <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center transform group-hover:scale-110">
        <span class="text-white font-bold text-lg">P</span>
      </div>
      <span class="font-bold text-lg hidden sm:inline bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">
        Paranjay
      </span>
    </a>

    {/* Navigation Links */}
    <div class="hidden md:flex items-center gap-4">
      {navItems.map(item => (
        <a
          href={item.href}
          class={`px-4 py-2 rounded-lg font-medium transition-all ${
            currentPage === item.id
              ? 'bg-blue-500/20 text-blue-300 border border-blue-500/50'
              : 'text-slate-300 hover:text-blue-300 hover:bg-slate-800/50'
          }`}
        >
          {item.label}
        </a>
      ))}
    </div>

    {/* CTA Button */}
    <a
      href="/contact"
      class="px-8 py-3 rounded-lg bg-gradient-to-r from-blue-500 to-purple-600 text-white font-medium hover:shadow-lg hover:shadow-blue-500/50 transform hover:scale-105"
    >
      Let's Talk
    </a>
  </nav>
</header>

<style>
  /* Mobile menu styles can be added here for responsive design */
</style>
