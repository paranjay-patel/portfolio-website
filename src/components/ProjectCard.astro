---
interface Props {
  title: string;
  description: string;
  tech: string[];
  github: string;
  featured?: boolean;
}

const { title, description, tech, github, featured = false } = Astro.props;
---

<a
  href={github}
  target="_blank"
  rel="noopener noreferrer"
  class={`group relative rounded-xl overflow-hidden border transition-all duration-300 hover:shadow-xl ${
    featured
      ? 'md:col-span-2 bg-gradient-to-br from-slate-800/50 to-slate-900/50 border-blue-500/30 hover:border-blue-500/60 hover:shadow-blue-500/20'
      : 'bg-slate-800/30 border-slate-700/50 hover:border-slate-600/50 hover:shadow-slate-500/10'
  }`}
>
  {/* Gradient overlay on hover */}
  <div class="absolute inset-0 bg-gradient-to-br from-blue-500/0 to-purple-500/0 group-hover:from-blue-500/10 group-hover:to-purple-500/10 transition-all duration-300"></div>

  <div class="relative p-6 h-full flex flex-col">
    {/* Header */}
    <div class="mb-4">
      <div class="flex items-start justify-between gap-4 mb-2">
        <h3 class={`font-bold group-hover:text-blue-400 transition-colors ${featured ? 'text-lg' : 'text-base'}`}>
          {title}
        </h3>
        <svg class="w-5 h-5 text-slate-400 group-hover:text-blue-400 transform group-hover:translate-x-1 group-hover:-translate-y-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L1 10m0 0l6 6m10-6v12m0 0l6-6m0 0l-6-6"/>
        </svg>
      </div>
      {featured && <div class="inline-block px-2 py-1 rounded text-xs bg-blue-500/20 text-blue-300 border border-blue-500/50 mb-2">Featured</div>}
    </div>

    {/* Description */}
    <p class="text-slate-400 text-sm mb-4 flex-grow">{description}</p>

    {/* Tech Stack */}
    <div class="flex flex-wrap gap-2">
      {tech.map(t => (
        <span class="px-3 py-1 rounded-full text-xs bg-slate-700/50 text-slate-300 border border-slate-600/50 group-hover:border-blue-500/30 transition-colors">
          {t}
        </span>
      ))}
    </div>
  </div>
</a>

<style>
  a {
    text-decoration: none;
  }
</style>
